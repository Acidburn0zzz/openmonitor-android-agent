<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:text="IMC Mobile Agent"
	    android:id="@+id/IMCTextView"
	    />
	    
	<ListView android:id="@+id/ListView01"
		android:layout_width="wrap_content"
		android:layout_below="@id/IMCTextView" 
		android:layout_height="wrap_content" />
		   
    <LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:id="@+id/LL1"
		android:layout_below="@id/ListView01" >

		<CheckBox android:id="@+id/check1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Filter Critical Events" />
			
		<CheckBox android:id="@+id/check2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Blank" />
				
	</LinearLayout>
	
	<TextView  
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_below="@id/LL1"
	    android:text="IP: "
	    android:id="@+id/ipTextView"
	    />
</RelativeLayout>