<RelativeLayout 
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">
	
	<TextView  
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:text="@string/app_name"
    	android:id="@+id/IMCTextView"/>
			
	<RadioGroup 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:id="@+id/QueGroup1"
		android:layout_below="@id/IMCTextView">
	
		<RadioButton 
			android:checked="false"
			android:id="@+id/option1" 
			android:text="@string/radio_button_website"/>
	
		<RadioButton 
			android:checked="false"
			android:id="@+id/option2" 
			android:text="@string/radio_button_service"/>
	</RadioGroup>
		
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:layout_below="@id/QueGroup1"
		android:id="@+id/LL1">
		
		<EditText 
			android:id="@+id/text1"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:hint="@string/edit_text_suggestion"/>
			
		<EditText 
			android:id="@+id/text2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:hint="@string/edit_text_email"/>
			
		<TextView 
			android:id="@+id/TextView01" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:text="@string/text_selected"/>
			
		<Button 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/send_button" 
			android:id="@+id/selected"/>
	</LinearLayout>
		
	<RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:orientation="vertical"
		android:layout_below="@id/LL1"
		android:id="@+id/RL1">
		
		<TextView  
    		android:layout_width="fill_parent" 
    		android:layout_height="wrap_content" 
    		android:text="@string/text_scanning"
    		android:id="@+id/IntervalTextView"/>
    	
    	<EditText 
    		android:id="@+id/text3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:hint="@string/edit_text_interval"
			android:numeric="decimal"
			android:layout_below="@id/IntervalTextView"/>
			
		<Button 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
			android:text="@string/interval_button" 
			android:layout_toRightOf="@id/text3"
			android:layout_below="@id/IntervalTextView"
			android:id="@+id/intervalButton"/>
	</RelativeLayout>
	
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:text="@string/scan_button" 
		android:layout_below="@id/RL1"
		android:id="@+id/scanButton"/>
</RelativeLayout>